snippet workspaces "Set up Cargo.toml workspaces"
	# see https://doc.rust-lang.org/cargo/reference/workspaces.html
	[workspace]
	resolver = "2"
	members = ["packages/*"]

snippet dependencies "Favourite crates"
	[dependencies]
	# Augment errors with additional context
	# https://github.com/dtolnay/anyhow
	anyhow = "1.0.79"
	# Serialization/Deserialization
	# https://serde.rs/
	serde = { version = "1.0", features = ["derive"] }
	serde_json = "1.0.109"
	serde_yaml = "0.9.30"
