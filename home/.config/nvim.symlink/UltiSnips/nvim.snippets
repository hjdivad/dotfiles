snippet keymap:set "set a keymap"
vim.keymap.set('${1:n}', '<leader>${2:}', ${3:rhs}, { desc='${4:something useful}', ${0} })
endsnippet

snippet set:keymap "set a keymap"
vim.keymap.set('${1:n}', '<leader>${2:}', ${3:rhs}, { desc='${4:something useful}', ${0} })
endsnippet

snippet create:command "create a user command"
vim.api.nvim_create_user_command('${1:CommandName}', function()
	${0}
end, { desc = '${2:CommandDescription}' })
endsnippet
